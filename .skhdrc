# fast focus desktop
ctrl - w : yabai -m space --focus prev || yabai -m space --focus last
ctrl - x : yabai -m space --focus next || yabai -m space --focus first
ctrl - a : yabai -m space --focus 1
ctrl - z : yabai -m space --focus 2
ctrl - e : yabai -m space --focus 3
ctrl - r : yabai -m space --focus 4
ctrl - t : yabai -m space --focus 5
ctrl - y : yabai -m space --focus 6
ctrl - u : yabai -m space --focus 7
ctrl - i : yabai -m space --focus 8
ctrl - o : yabai -m space --focus 9
ctrl - p : yabai -m space --focus 10

# move window
ctrl - h : yabai -m window --warp west
ctrl - j : yabai -m window --warp south
ctrl - k : yabai -m window --warp north
ctrl - l : yabai -m window --warp east

# swap window
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east

# increase window size
ctrl + alt - q : yabai -m window --resize left:-20:0
ctrl + alt - d : yabai -m window --resize bottom:0:20
ctrl + alt - s : yabai -m window --resize top:0:-20
ctrl + alt - f : yabai -m window --resize right:20:0
